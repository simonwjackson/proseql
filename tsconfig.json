{
	"compilerOptions": {
		"composite": false,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"module": "esnext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["bun-types"],
		"downlevelIteration": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "effect"]
}
