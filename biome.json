{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"files": {
		"includes": [
			"packages/*/src/**/*.ts",
			"packages/*/tests/**/*.ts",
			"bench/**/*.ts",
			"scripts/**/*.ts",
			"!**/dist",
			"!!node_modules"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	}
}
